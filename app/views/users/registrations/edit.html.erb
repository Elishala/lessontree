<section class="login-signup-container">
	<h2 class="login-signup-form-header">Edit My Profile</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"minimal" }, multipart: true) do |f| %>
  <%= devise_error_messages! %>


    <%= f.label "Upload a Profile Photo" %><br />
    <%= f.file_field :avatar %>


    <%= f.label :name %><br />
    <%= f.text_field :name, id: 'name', placeholder:"Your full name" %>


    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, id:"email", placeholder:"e-mail" %>

    <%= f.label :school %><br />
    <%= f.text_field :school, id:"school", placeholder:"Where I teach" %>

    <%= f.label :city %><br />
    <%= f.text_field :city, id:"schoo-cityl", placeholder:"My school's city" %>

    <%= f.label :state %><br />
    <%= f.text_field :state, id:"state", placeholder:"State" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'devise-update' %>
  </div>
<% end %>
</section>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
