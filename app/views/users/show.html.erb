<section class="profile-wrapper">

  <aside class="user-profile-photo-wrapper">
    <%= image_tag @user.avatar.url, class: "user-profile-photo" if @user %>
  </aside>

  <aside class="user-profile-information-wrapper-right">
    <ul class = "user-profile-unique-information">
      <li><strong>Name:</strong>&nbsp&nbsp<%= @user.name %></li>
      <li><strong>Grades I Teach:</strong>&nbsp&nbsp<%= formatted_user_grade_levels(@user) %></li>
      <li><strong>My School Name:</strong>&nbsp&nbsp<%= @user.school %></li>
      <li><strong>School City:</strong>&nbsp&nbsp<%= @user.city %></li>
      <li><strong>School State:</strong>&nbsp&nbsp<%= @user.state %></li>
      <li><%= render 'followers_show' %></li>
      <li><%= button_to "Follow", friendships_path(:friend_id => @user), :method => :post %></li>
    </ul>
  </aside>
</section>

<p><%= button_to "Find other users to follow", all_users_users_path, :method => 'get' %></p>

<br><% @user.lessons.each do |l| %>
<%= link_to l, class:"my-lessons-container-link" do %>
  <section class="my-lessons-container">
    <article class="my-lessons-preview-area">
      <h3 class="my-lessons-container-title"><%= l.topic %></h3>
      <p class="my-lessons-container-description">
        <%= l.description.html_safe %>
      </p>
      <div class="my-lesson-edit-button-container">
        <%= link_to "Edit", "/lessons/#{l.id}/edit", class:"my-lesson-edit-button" %>
      </div>
    </article>
  </section></a>
<% end %>
<% end %>
<h3>Starred Lessons</h3>
<% @starred_lessons.each do |l| %>
  <%= link_to l, class:"my-lessons-container-link" do %>
  <section class="my-lessons-container">
    <article class="my-lessons-preview-area">
      <h3 class="my-lessons-container-title"><%= l.topic %></h3>
      <p class="my-lessons-container-description">
        <%= l.description.html_safe %>
        <%= l.user %>
      </p>
    </article>
  </section></a>
  <% end %>
<% end %>
<div><%= link_to "Edit Profile", edit_user_registration_path, class: 'save-button' %></div>
<br>
<div><%= link_to "New Lesson", new_lesson_path, class: 'save-button' %></div>
