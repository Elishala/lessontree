<section class="profile-wrapper">

  <div class="user-profile-photo-wrapper">
    <%= image_tag @user.avatar.url, class: "user-profile-photo" if @user %>
  </div>

  <div class="user-profile-information-wrapper-right">
    <ul class = "user-profile-unique-information">
      <li><span class="profile-page-user-labels">Name:</span>&nbsp&nbsp<%= @user.name %></li>
      <li><span class="profile-page-user-labels">Grade I Teach:</span>&nbsp&nbsp<%= formatted_grade_level_name(@user) %></li>
      <li><span class="profile-page-user-labels">My School Name:</span>&nbsp&nbsp<%= @user.school %></li>
      <li><span class="profile-page-user-labels">School City:</span>&nbsp&nbsp<%= @user.city %></li>
      <li><span class="profile-page-user-labels">School State:</span>&nbsp&nbsp<%= @user.state %></li>
    </ul>
    <span><%= render 'followers_show' %></span>

  </div>
</section>

<div><%= link_to "Edit Profile", edit_user_registration_path, class: 'save-button' %></div>
<br>
<div><%= link_to "New Lesson", new_lesson_path, class: 'save-button' %></div>
<br>
</br>

<ul class="accordion-tabs">
  <li class="tab-header-and-content">
    <a href="javascript:void(0)" class="is-active tab-link">My Lessons</a>
    <div class="tab-content">
      <%= render partial: 'my_lessons' %>
    </div>
  </li>
  <li class="tab-header-and-content">
    <a href="javascript:void(0)" class="tab-link">Starred Lessons</a>
    <div class="tab-content">
      <%= render partial: 'my_starred_lessons' %>
    </div>
  </li>
</ul>
