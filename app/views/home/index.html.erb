

<body>
  <div class="main-container">

      <h1>Teacher Lesson Plans<h1>
        <p class="key-words">find, share, edit, plan, save</p>
        <h2>all in one place</h2>
    </div>

    <div class="search-container">

      <form method="GET" action="/search">
        <span><input type="text" name="q" class="search" placeholder="search here"></span>
      </form>
    </div>

  <div class="card-container">
    <div class="cards">
    <%= @lessons.each do |l| %>
      <div class="card">
        <div class="card-image">
          <h3> <%= l.topic %></h3>
        </div>
        <div class="card-header">
          <%= l.description.html_safe + "..." %>
        </div>
        <div class="card-copy">
        </div>
      </div>
      <% end %>
    </div>
  </div>
 </div>
