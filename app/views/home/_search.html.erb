  <%= form_tag '/' + '#steady_scroll', class: "inline-search-form", :method => 'get' do %>
    <%= text_field_tag :search, params[:search], :id => 'inline-search-field' %>
    <p>Subject:</p>
    <%= select_tag "subject_id", options_from_collection_for_select(Subject.all, "id", "title") %>
    <p>Grade Level:</p>
    <%= select_tag "grade_levels_id", options_from_collection_for_select(GradeLevel.all, "id", "title" ) %>
    <br><%= submit_tag "Search", :name => nil, class: 'inline-search-button' %></br>
<% end %>
