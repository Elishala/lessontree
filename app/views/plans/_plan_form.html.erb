<% if @plan.errors.any? %>
  <ul>
    <%= @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@plan, multipart: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <% f.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= f.submit "Create Plan", :class => "create-lesson" %>
  </div>
<% end %>
