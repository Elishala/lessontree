<% if @lesson.errors.any? %>
  <ul>
    <%= @lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@lesson, multipart: true) do |f| %>
  <div>
    <%= f.text_field :topic, placeholder: "Title of my lesson" %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= f.text_area :description, placeholder: "Description of my lesson" %>
  </div>
  <div>
    <%= f.label "Subjects" %>
    <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :title %>
  </div>
  <div>
    <%= f.label "Grade Levels" %>
    <%= f.collection_check_boxes :grade_level_ids, GradeLevel.all, :id, :title %>
  </div>
  
<% end %>
