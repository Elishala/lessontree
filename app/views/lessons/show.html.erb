<section class="lesson-preview-container">

  <div class="lesson-preview-title-container">
    <h3 class="lesson-preview-title"><%= @lesson.topic %></h3>
    <ul>
        <li class="lesson-preview-subject-list"><%= formatted_lesson_subjects(@lesson) %></li>
        <li class="lesson-preview-pipe">|</li>
        <li class="lesson-preview-grade-list"><%= formatted_lesson_grade_levels(@lesson) %></li>
  </ul>
  </div>

  <div class="lesson-preview-description-container">
    <ul class="star-ranking">
    <li class="icon-star"></li>
    <li class="ranking"><%= @lesson.stars.count %></li>
    </ul>
    <p class="lesson-preview-description"><%= @lesson.description.html_safe %></p>
  </div>

  <div id="paginator">
    <%= paginate @documents %>
  </div>

  <%= render 'document_show' %>

  <section class="document-page-top-toolbar-container">
    <div class="document-page-top-toolbar">
      <ul class="document-page-top-toolbar-list">
        <a href="www.google.com">
          <li class="document-page-top-toolbar-edit"><i class="fa fa-pencil-square-o"></i><span class="document-page-edit">Edit</span></li>
        </a>
        <a href="www.google.com">
          <li class="document-page-top-toolbar-history"><i class="fa fa-history"></i><span class="document-page-history">History</span></li>
        </a>
        <a href="www.google.com">
          <li class="document-page-top-toolbar-delete"><i class="fa fa-trash-o"></i><span class="document-page-delete">Delete</span></li>
        </a>
      </ul>
    </div>
  </section>

  <section class="document-page-doc-list-containter">
    <h3 class="document-page-doc-list-headline">Lesson Documents</h3>
    <div class="document-page-doc-headline-border"></div>
    <ul class= "document-page-doc-list">
      <li class="document-page-doc">My Fake Doc</li>
    </ul>

    <ul class="document-page-doc-list-create">
      <li class="document-page-doc-create"><i class="fa fa-plus"></i><span class="document-page-doc-create">Create</span></li>
    </ul>
  </section>

  <section class="document-page-full-document">
    <p>laksdjflaksdjflaksdjflkasjdflkasdjf</p>
  </section>


  <%= commontator_thread(@lesson) %>
</section>
<% if @lesson.user == current_user %>
<div class="edit-save-buttons-wrapper">
  <%= link_to 'Upload Lesson Document', upload_file_documents_path(lesson_id: @lesson.id), id: 'fancybox', class: 'edit-button' %>
  <%= link_to "Create Lesson Document", new_document_path(lesson_id: @lesson.id), class: 'save-button' %>
  <div class="delete-lesson-button-wrapper">
  <div class="delete-lesson-button"
  <%= link_to "Delete Lesson", lesson_path(@lesson), method: :delete %>
</div>
</div>
</div>
<% end %>
