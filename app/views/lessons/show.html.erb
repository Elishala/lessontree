<div><h3><%= @lesson.topic %></h3></div>
<div id="lesson-show"><%= @lesson.description.html_safe %></div>

<%= form_for @star do |f| %>
<%= f.label "Star this lesson?" %>
<%= f.check_box :lesson_id, value: @lesson.id, class: "star-box", id: "#{@lesson.id}", checked: @starred %>
<% end %>

<div>
  <% if @documents %>
    <% @documents.each do |d| %>
      <%= link_to d do %>
      <p><%= d.title %></p>
      <% end %>
    <% end %>
  <% end %>
</div>

<h3>Uploaded Documents</h3>
<% @uploaded_documents.each do |d| %>
  <div><%= link_to("#{d.title}", d.upload.url) %></div>
<% end %>

<h3>Created Documents</h3>
<% @created_documents.each do |d| %>
  <div><%= link_to "#{d.title}", d %></div>
<% end %>


<div class="edit-save-buttons-wrapper">
  <%= link_to 'Upload Lesson Document', "/documents/#{@lesson.id}/upload_file", class: 'edit-button' %>
  <%= link_to "Create Lesson Document", '/documents/new' + "?lesson_id=#{@lesson.id}", class: 'save-button' %>
</div>
