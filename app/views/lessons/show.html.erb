<section class="lesson-preview-container">

  <div class="lesson-preview-title-container">
    <h3 class="lesson-preview-title"><%= @lesson.topic %></h3>
    <ul>
        <li class="lesson-preview-subject-list"><%= formatted_lesson_subjects(@lesson) %></li>
        <li class="lesson-preview-pipe">|</li>
        <li class="lesson-preview-grade-list"><%= formatted_lesson_grade_levels(@lesson) %></li>
  </ul>
  </div>

  <div class="lesson-preview-description-container">
    <ul class="star-ranking">
    <li class="icon-star"></li>
    <li class="ranking"><%= @lesson.stars.count %></li>
    </ul>
    <p class="lesson-preview-description"><%= @lesson.description.html_safe %></p>
  </div>

    <div class="star-container">
      <% unless @lesson.user == current_user %>
        <%= form_for @star do |f| %>
        <%= f.hidden_field :lesson_id, value: @lesson.id %>
          <%= f.submit "Star", class: "star-box", id: "#{@lesson.id}" do %>
            <i class="icon-star"></i>
          <% end %>
          <% end %>
      <% end %>
    </div>

  <% unless @uploaded_documents.empty? %>
    <p class="list">Uploaded Documents</p>
    <% @uploaded_documents.each do |d| %>
      <% if d.upload_content_type.include?("pdf") %>
        <span class="document-show-button"><%= link_to "View #{d.title}", "#{d.upload.url}", class: "fancybox", id: "#{d.id}", remote: true %></span>
      <% else %>
        <span class="document-show-button"><%= link_to "Download #{d.title}", "#{d.upload.url}" %></span>
      <% end %>
        <span class="document-buttons"><%= link_to " | Delete", document_path(d), method: :delete %></span>
    <% end %>
  <% end %>

  <% unless @created_documents.empty? %>
    <p class="list">Created Documents</p>
    <% @created_documents.each do |d| %>
      <span class="document-show-button"><%= link_to "#{d.title}:", document_form_lesson_path(d.id), class: "fancybox", id: "#{d.id}", remote: true %></span>
      <span class="document-buttons"><%= link_to "Version History", version_history_document_path(d.id) %></span>
      <% if @lesson.user == current_user %>
        <span class="document-buttons"><%= link_to " | Edit", edit_document_path(d.id) %></span>
        <span class="document-buttons"><%= link_to " | Delete", document_path(d), method: :delete %></span>
      <% end %>
      <br>
    <% end %>
  <% end %>
<br>
  <%= commontator_thread(@lesson) %>
</section>
<% if @lesson.user == current_user %>
<div class="edit-save-buttons-wrapper">
  <%= link_to 'Upload Lesson Document', upload_file_documents_path(lesson_id: @lesson.id), id: 'fancybox', class: 'edit-button' %>
  <%= link_to "Create Lesson Document", new_document_path(lesson_id: @lesson.id), class: 'save-button' %>
  <%= link_to "Delete Lesson", lesson_path(@lesson), method: :delete %>
</div>
<% end %>
