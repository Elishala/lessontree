
<section class="signup-container">
	<h2 class="signup-form-header">Sign Up</h2>
	<form class="signup-form" method="post" class="minimal">
		<label for="name">
      <input type="text" name="name" id="name" placeholder="My full name" />
		</label>
    <label for="grades">
      <input type="text" name="grades" id="grades" placeholder="Grades I teach" />
    </label>
    <label for="school">
      <input type="text" name="school" id="school" placeholder="Where I teach" />
    </label>
    <label for="school-city">
      <input type="text" name="school-city" id="school-city" placeholder="My school's city" />
    </label>
    <label for="username">
      <input type="text" name="username" id="username" placeholder="Username" />
		</label>
    <label for="password">
      <input type="password" name="password" id="password" placeholder="Password must be between 8 and 20 characters" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{8,20}$" required="required">
		</label>
    <div class="signup-button-container">
		<button class="signup-button" type="submit">Sign Up</button>
    </div>
  </form>
</section>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "signup-form") do |f| %>
  <%= devise_error_messages! %>

	<section class="signup-container">
		<h2 class="signup-form-header">Sign Up</h2>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "My E-mail" %>
  </div>

  <div class="field">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", :class => 'devise-sign-up' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
