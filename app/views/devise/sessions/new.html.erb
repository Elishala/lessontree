
<section class="login-container">
  <h2 class="login-form-header">Log In</h2>



  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'minimal') do |f| %>


      <%= f.email_field :email, autofocus: true, placeholder: "Username" %>


    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

    <div class="login-forgot-password-buttons-wrapper">
  <div class="login-button-wrapper">
    <%= f.submit "Log In", :class => 'login-button' %>
  </div>

<% end %>


<%= render "devise/shared/links" %>
</div>
</section>

<div class="create-upload-buttons-wrapper">
  <button class="upload-button" type="button">Upload</button>
  <button class="create-button" type="button">Create Doc</button>
</div>
